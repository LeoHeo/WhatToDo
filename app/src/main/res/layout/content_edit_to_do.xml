        <!--android:layout_height="1dp"-->
        <!--android:background="#c0c0c0"-->
        <!--android:id="@+id/view"-->
        <!--android:layout_below="@+id/editname"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true" />-->





</RelativeLayout>